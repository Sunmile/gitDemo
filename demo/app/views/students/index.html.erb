<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table>
  <thead>
    <tr>
      <th>学号</th>
      <th>姓名</th>
      <th>性别</th>
      <th>年龄</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.Stu_No %></td>
        <td><%= student.Stu_Name %></td>
        <td><%= student.Stu_gender %></td>
        <td><%= student.Stu_age %></td>
        <td><%= link_to "展示", student %></td>
        <td><%= link_to "编辑", edit_student_path(student) %></td>
        <td><%= link_to "删除", student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

